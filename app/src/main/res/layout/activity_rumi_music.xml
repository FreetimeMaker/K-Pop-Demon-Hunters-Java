<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:theme="@style/ThemeOverlay.KPopDemonHunters.FullscreenContainer"
    tools:context=".ui.music.RumiMusicActivity">

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <!-- Scrollable content -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Title -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/rumiMusicTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:text="Songs Featuring Rumi"
                        android:textColor="@color/black"
                        android:paddingBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/freeCover"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:src="@drawable/free"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/Free"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:text="Free"
                            android:textSize="24sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/FreeInfoButton"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="Get More Infos about the Song" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/rumiImage"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:src="@drawable/rumi"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/rumiBackTXT"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Go Back to the Infos about Rumi"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/BackToRumiInfoButton"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="Go Back to the Infos about Rumi" />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </FrameLayout>

</FrameLayout>